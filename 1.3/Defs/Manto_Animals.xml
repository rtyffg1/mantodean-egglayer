<Defs>

   <ThingDef ParentName="AnimalThingBase">
    <defName>MantSpawner</defName>
    <label>Mantodean egglayer</label>
    <description>Main spawner for mantodean race. It has a gluttonous appetite and a narrow food preferences. Does not tolerate cold.
	It lays eggs that hatch into a small mantscarab. Those eggs need to be cared for to hatch into other creatures of mantodean hive.</description>
    <statBases>
      <MoveSpeed>1.0</MoveSpeed>
      <MarketValue>500</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ComfyTemperatureMin>10</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
    <tools>
      <li>
        <label>claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>2</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>3</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>MantFarming_UEgg</eggUnfertilizedDef>
        <eggFertilizedDef>MantFarming_UEgg</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
		<eggLayIntervalDays>3</eggLayIntervalDays>
        <eggLayFemaleOnly>false</eggLayFemaleOnly>
        <eggCountRange>1</eggCountRange>
      </li>
    </comps>
    <race>
      <body>BeetleLikeWithClaw</body>
      <baseHungerRate>2.0</baseHungerRate>
      <baseBodySize>2.0</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <foodType>AnimalProduct, Kibble</foodType>
      <trainability>None</trainability>
      <wildness>0</wildness>
	  <useMeatFrom>Megaspider</useMeatFrom>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0</manhunterOnDamageChance>
      <mateMtbHours>8</mateMtbHours>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
					<soundWounded>Pawn_Chick_Call</soundWounded>
					<soundDeath>Pawn_Chick_Call</soundDeath>
					<soundCall>Pawn_Chick_Call</soundCall>
					<soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.03</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.06</minAge>
          <soundWounded>Pawn_Chicken_Wounded</soundWounded>
          <soundDeath>Pawn_Chicken_Death</soundDeath>
          <soundCall>Pawn_Chicken_Call</soundCall>
          <soundAngry>Pawn_Chicken_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalInsect</li>
    </tradeTags>
  </ThingDef>

